{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "actions-update-project-item",
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "noEmit": false,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@site/*": ["./*"]
        },
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx",
        "target": "ES2020",
        "module": "ES2020",
        "outDir": "./src",
        "sourceMap": true,
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
